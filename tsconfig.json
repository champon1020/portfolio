{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": ["./src", "./types"]
}
